            @Html.ValidationMessageFor(model => model.GameConsole, "", new { @class = "text-danger" })
        </div>
    </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.GameConsole, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.GameConsole,new SelectList(new List<string> {"PC","Xbox","PS2","PS3","PS4","PS5"}),"Select Condole")
            @Html.ValidationMessageFor(model => model.GameConsole, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
